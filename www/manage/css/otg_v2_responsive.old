	#file_uploads_container {
		margin-bottom: 20px;
		padding-bottom: 20px;
		border-bottom: 1px solid #EDEDED;
	}	
	.related-items .itembox .product-image {
		float: left;
		margin-right: 10px;
		width: 60px;
		height: 60px;
		overflow: hidden;
	}
