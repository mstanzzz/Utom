	//
	//	home page adjustments for mobile
	//
	.home-content .span9.carousel-holder {
		width: 114%;
		margin-left: -7%;
		margin-top: 0px;
		#homeCarousel {
			border: none;
			.carousel-inner {
				height: auto;
				.carousel-caption {
					bottom: 0px;	
				}
			}
		}
		.carousel-control.left {
			left: 2%;
		}
		.carousel-control.right {
			right: 2%;	
		}
	}
	.home-content .row.categories .span2.category {
		margin-left: 2.5%;
		.box-shadow(inset 0px -1px 2px rgba(0, 0, 0, 0.1));
		margin-top: .5em;
		margin-bottom: .5em;
		padding-bottom: 0;
		border-radius: 0px;
		width: 97.5%;
		border: none;
		float: none;
		&:last-child {
			.box-shadow(none);	
		}
		&:hover, &:active {
			background-color: @darkblue;
			color: @white;
			a .caption {
				color: @white;
				text-shadow: none;	
			}
		}
		a img {
			width: 10%;
			float: left;
			margin-right: 2.5%;	
		}
		a .caption {
			background: transparent;
			position: static;
			text-align: left;
			width: 87.5%;
			padding: 0;	
			font-weight: normal;
			display: table-cell;
			vertical-align: middle;
			color: @darkblue;
			font-size: 14px;
