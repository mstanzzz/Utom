@media  (max-width: 767px) {
	#searchFAQ .btn {
		margin-top: 15px;	
	}
	.hide-desktop {
		display: block;	
	}
	.hide-tablet {
		display: block;	
	}
	//mobile navigation
	
	body {
		padding: 0px;
		//we want to fade all the content in after the JS adjustments have been made so it's not wonky
		opacity: 0;
	}
	header.container {
		padding: 0;
		height: 130px;
		min-height: 110px;
		.cta {
			display: none;	
		}
		.logo-image {
			width: 45%;
			margin-left: 0;
			position: absolute;
			left: 5px;
			bottom: 15px;
		}
		.header-search {
			width: 45%;
			bottom: 25px;
			.header-search-input {
				width: 68%;	
			}
			.btn {
				width: 18%;
				padding: 0;
			}
		}
	}
	footer, footer.container {
		width: 100%;
		font-size: 12px;
		.row {
			padding-left: 2.5%;
			[class^="span"], [class*="span"] {
				float: left;	
			}
			.span3 {
				width: 45%;
				margin-left: 2.5%;
				margin-right: 2.5%;
				&:after {
					width: 0px;
					background-color: transparent;	
				}
			}
		}
		.footer-bottom-row .span2.col5 {
			float: none;
			width: 100%;
			margin-right: 0;
			border-right: none;
			padding: 0;
			ul {
				display: none;
				background-color: rgba(0,0,0,.05);	
				li a{
					font-size: 14px;
					display: block;
					padding: 3px 0px;
					border-bottom: 1px solid @lightgray;
				}
			}
			h5 {
				cursor: pointer;
				border-bottom: 1px solid @gray;
				margin: 0;
				padding: 6px 0;	
				i {
					float: right;	
				}
			}
		}
		.footer-middle-row .span4 {
			p {
				text-align: center;	
			}
			.pull-left {
				float: none;
				display: block;
				text-align: center;	
			}
		}
		.footer-middle-row .span8 {
			display: none;
		}
	}
