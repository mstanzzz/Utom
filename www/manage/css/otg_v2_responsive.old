	//shrink text in skinny page elements:
	.member-account {
		.account-header {
			font-size: 18px;
		}
		h3.gutter-top {
			font-size: 13px;
			line-height: 30px;
		}
	}
	.account-dashboard input {
		width: 65%;	
	}
	.span3.account-column {
		width: (@fluidGridColumnWidth*3)+(@fluidGridGutterWidth*1.5);
		padding: 0 (@fluidGridGutterWidth)/4;
	}
	.design-list, .order-list, .folder-list, .account-list {
		h5 {
			font-size: 12px;	
		}
		>li a {
			font-size: 11px;
		}
		ul {
			font-size: 11px;
		}
	}
	.span3 .design-list .itembox {
	 li {
		 line-height: 14px;
		 a {
			min-height: 30px; 
		 }
		 i {
			float: left; 
		 }
	 }
	}
	.account-design-option {
		font-size: 16px;	
	}
	.member-account h3.account-actions {
		font-size: 13px;
		line-height: normal;
		a {
			min-height: 30px;
			i {
				float: left;	
			}
		}
	}
	.browse-brands .brand-list-alpha >li a {
		margin-right: 4px;
		padding: 5px 3px;	
	}
	.search-controls {
		font-size: 11px;
		position: relative;
		&.search-controls-top {
			.search-designs, .search-orders {
				float: none;
