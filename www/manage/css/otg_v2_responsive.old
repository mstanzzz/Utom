//
// Responsive: Large desktop and up
// --------------------------------------------------


@media (min-width: 1270px) {
	h1 { font-size: 37px; }
	header, 
	header.container {
		padding: 0px @gridGutterWidth1200;
	}
	.page-content {
		border-left: @gridGutterWidth1200 solid @white;	
		border-right: @gridGutterWidth1200 solid @white;	
	}
	nav#main-nav  >ul >li.multiple-subnavs > .subnav {
		width: @gridRowWidth1200;
		& > li {
				width: (@gridRowWidth1200 - 80px)/4;
		}
	}
	nav#main-nav > ul > li > a{
		font-size: 16px;
		padding: 10px 15px;
	}
	footer, 
	footer.container {
		width: (@gridColumnWidth1200*@gridColumns)+(@gridGutterWidth1200*13);
		#email_updates_input {
			width: 220px;	
		}
	}
	footer.container .footer-bottom-row .span2.col5 {
		width: (@gridRowWidth1200 - (@gridGutterWidth1200*5))/5;
	}
	.ask_mainnav, .ask_hero {
		padding: 12px @gridGutterWidth1200;
	}
	.sidebar-left aside, .sidebar-right aside{
		width: (@gridColumnWidth1200*3)+(@gridGutterWidth1200*2);
	}
	.sidebar-left {
		box-shadow: inset 120px 0px 75px -25px #ffffff, inset -((@gridColumnWidth1200*9)+(@gridGutterWidth1200*10)) 0px 0px #ffffff,0px 0px 25px rgba(0,0,0,.25);
	}
	.sidebar-right {
		box-shadow: inset -120px 0px 75px -25px #ffffff, inset (@gridColumnWidth1200*9)+(@gridGutterWidth1200*10) 0px 0px #ffffff,0px 0px 25px rgba(0,0,0,.25);
	}
	.showroom-content {
		width: (@gridColumnWidth1200*9)+(@gridGutterWidth1200*9);
	}
	.category {
		margin-left: @gridGutterWidth1200 - 6;
	}
	.home-content {
		.row.categories {
			.span2.category {
				margin-left: (@gridGutterWidth1200 - 6px)*2;	
			}
		}
	}
	.span3 > .itembox {
		margin-bottom: @gridGutterWidth1200;
		.product-image {
			width: ((@gridColumnWidth1200*3)+@gridGutterWidth1200);
		}
	}
	.totals-right {
		width: ((@gridColumnWidth1200*3)+(@gridGutterWidth1200*1))-20px; //to account for the padding on .itembox
	}
	.cart-item  .product-image {
		max-height: @gridColumnWidth1200*1.4;
	}
	.showroom-content .showroom-thumbnails {
		height: 180px;	
	}
	.showroom-content .showroom-thumbnails .slider {
		height: 140px;
	}
	.itembox {
		#grid > .padding(20px,@gridColumnWidth1200,@gridGutterWidth1200);
	}
	.cart-item .itembox {
		#grid > .padding(0px,@gridColumnWidth1200,@gridGutterWidth1200);
	}
	#rate-heading {
	padding-top: 10px;	
	}
	.page-content .browse-brands .brand-list-alpha >li a {
		margin-right: 6px;
		padding: 5px 8px;	
	}
	.search-controls {
		.display-type, .pagination, .results-per-page, .sort-results {
			font-size: 13px;
		}
		.search-designs, .search-orders {
			input {
				width: 200px;	
			}
		}
		.result-summary {
			font-size: 18px;	
		}
	}
	.home_CTA_form table input {
		width: (@gridColumnWidth1200*3)+(@gridGutterWidth1200*2)-33px;	
	}
	.span3.account-column {
		width: (@gridColumnWidth1200*3)+@gridGutterWidth1200;
		padding: 0 (@gridGutterWidth1200)/2;
		h2.account-header {
			margin-top: (@gridGutterWidth1200)/2;	
		}
	}
	.idea_hero {
		border-left: @gridGutterWidth1200 solid #e0e7ed;
		border-right: @gridGutterWidth1200 solid #e0e7ed;
	
	}
	.idea_left {
		margin-left: 0;	
	}
	.full_page_blue {
		margin-left: -@gridGutterWidth1200;
		border: @gridGutterWidth1200 solid @lightestblue;
	}
	.sidebar-left, .sidebar-right {
		.intro_area {
			padding: 0 0 @gridGutterWidth1200 @gridGutterWidth1200;
			margin-left: 0;
		}
	}
	.intro_area {
		padding: 0 @gridGutterWidth1200 @gridGutterWidth1200;
		margin-left: -@gridGutterWidth1200;
	}
	.offsethalf {
		margin-left: @gridGutterWidth1200+(@gridColumnWidth1200/2);	
	}
	.design_email_form {
		margin-left: -20px;	
	}
}
// TABLET
@media (min-width: 768px) and (max-width: 979px) {
	.hide-tablet, .hide-tablet.hide-desktop {
		display: none;	
	}
	.hide-desktop {
		display: block;	
	}
	h1 { font-size: 25px; }
	h2 { font-size: 20px; }
	h3 { font-size: 16px; }
	header.container {
		padding: 0;
		height: 140px;
		.cta {
			display: none;	
		}
		.logo-image {
			width: 45%;
			margin-left: 0;
			position: absolute;
			left: 5px;
			bottom: 25px;
		}
		.header-search {
			width: 45%;
			bottom: 35px;
			.header-search-input {
				width: 68%;	
			}
			.btn {
				width: 18%;
				padding: 0;
			}
		}
	}
	.container, header.container, footer.container {
		width: 95%;
		padding: 0 2.5%;
		border: none;
	}
	.page-content {
		border: none;
		padding-bottom: 20px;
	}
	.row.row-fluid {
		margin-left: 0;
		// make span children full width when we have nested fluid rows
		.span9 .span9 {
			width: 100%;
			margin-left: 0;	
		}
		.span6 .span6 {
			width: 100%;	
		}
		.span6 .span3 {
			width: 48%;	
		}
		aside.span3 {
			margin-left: 0;	
		}
		.span12 {
			margin-left: 0;	
		}
		.span6.pull-right {
			width: 45%;	
		}
		.span4 .span4 {
			width: 100%;		
		}
		.span8 .span8 {
			width: 100%;	
		}
	}
	//fix grid view on product list pages
	.results .row.row-fluid .span3 {
		width: 30%;
		&:first-child {
			margin-left: 2.25%;	
		}
	}
	.checkout.row-fluid .span8 {
		margin-left: 0;	
	}
	// Showroom Tablet Styles
	.showroom-page {
		.hide-tablet {
			display: none;	
		}
		.showroom-content-container {
			width: 100%;
			margin-left: 0;	
		}
		.showroom-main-image-container {
			width: 100%;
			float: none;
		}
		.showroom-detail-container {
			width: 100%;
			float: none;
			margin-left: 0;
		}
		.showrooms-banner h1, .showroom-banner h1 {
			font-size: 16px;
			line-height: normal;	
		}
		.offset3.next-showroom {
			float: right;	
		}
	}
	//more nested fluid grid fixes
	.categories .span3.category:nth-child(5n+0),.categories .span4.category:nth-child(4n+0) {
		margin-left: 0;
	}
	footer.container .footer-bottom-row .span2.col5 {
		width: (100% - (@fluidGridGutterWidth*6))/5;
	}
	.thumbnail-links {
		li {
			padding: 5px;
			line-height: 15px;
			a {
				display: block;
				position: relative;
				width: 90%;
				padding: 5%;	
			}
			img {
				width: 15px;
				height: 15px;
				position: absolute;
				top: 10px;
				left: -12px;	
			}
		}
	}
	footer.container .footer-top-row {
		padding-left: 5%;
		margin-left: -5%;
		padding-right: 5%;
	}
	.home-content .row.categories .span2.category {
		width: 22%;
		margin-left: @fluidGridGutterWidth;	
	}
	.home-content .gutter-top .gutter-top {
		margin-top: 0;	
	}
	nav#main-nav  >ul >li.multiple-subnavs > .subnav {
		width: @gridRowWidth768;
		& > li {
				width: (@gridRowWidth768 - 80px)/4;
		}
	}
	nav#main-nav > ul > li > a{
		font-size: 12px;
		padding: 10px 5px;
	}
	.ask_masthead .logo-image img {
		max-width: 	300px;
