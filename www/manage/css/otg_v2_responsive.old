	}
	.span3 > .itembox {
		margin-bottom: @gridGutterWidth768;
		.product-image {
			width: 95%;
		}
		.qty {
			display: block;
		}
	}
	.results .span3 .add-to-cart {
	  padding: @paddingMini;
