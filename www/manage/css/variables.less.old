@brightblue:			#88cbe5; //rgb(136,203,229)
@teal:					#93c4d2; //rgb(147,196,210)
@darkblue:     			#2E6C81; //rgb(46,108,129)
@darkestblue:     		#272E31; //rgb(39,46,49)

@green:     			#72A15A; //rgb(114,161,90)
@lightgreen :         	#E3ECDE; //rgb(227,236,222)

@orange:          		#ff831c; //rgb(255,129,27)
@lightorange:     		#FFB171; //rgb(255,177,113)

@lightyellow:			#f4f0cd; //rgb(244,240,205)

// OTG Grays:
@darkestgray: 			#494949; //rgb(73,73,73)
@darkergray: 			#7d7d7d; //rgb(125,125,125)
@darkgray: 				#A0A0A0; //rgb(160,160,160)

